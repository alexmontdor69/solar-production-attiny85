# Make solar-production
MCU=attiny85
AVRDUDEMCU=t85
CC=/usr/bin/avr-gcc
CFLAGS=-g -Os -Wall -mcall-prologues -mmcu=$(MCU)
OBJ2HEX=/usr/bin/avr-objcopy
AVRDUDE=/opt/avrdude/bin/avrdude
AVRDUDECONF=/opt/avrdude/etc/avrdude.conf
TARGET=solar-production.cpp
# target = name of your file you want upload on the attiny

all : 
# no need this part if you have the .hex :D
    #$(CC) $(CFLAGS) $(TARGET).c -o $(TARGET)
    #$(OBJ2HEX) -R .eeprom -O ihex $(TARGET) $(TARGET).hex
    #rm -f $(TARGET)

install : all

    sudo $(AVRDUDE) -p $(AVRDUDEMCU) -U $(AVRDUDECONF) -c linuxgpio - U flash:w:$(TARGET).hex


noreset : all
    sudo $(AVRDUDE) -p $(AVRDUDEMCU) -P /dev/spidev0.0 -c linuxgpio -U flash:w:$(TARGET).hex

